<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/dodajProjektButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:onClick="addProject"
        android:text="Dodaj projekt"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/archiwizujButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Archiwizuj projekt"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/ustawieniaButton"
        app:layout_constraintStart_toEndOf="@+id/dodajProjektButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/projektyListView"
        android:layout_width="368dp"
        android:layout_height="419dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dodajProjektButton" />

    <Button
        android:id="@+id/ustawieniaButton"
        android:layout_width="100dp"
        android:layout_height="51dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        android:text="Ustawienia"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>