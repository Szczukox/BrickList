<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:maxHeight="100dp"
    app:layout_constrainedHeight="false">

    <LinearLayout
        android:layout_width="333dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nazwaKlockaTextView"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:text="nazwa klocka"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/liczbaKlockowTextView"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="0 / 0"
            android:textAlignment="center" />
    </LinearLayout>


    <Button
        android:id="@+id/plusButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="+" />

    <Button
        android:id="@+id/minusButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/plusButton"
        android:layout_alignStart="@+id/plusButton"
        android:layout_below="@+id/plusButton"
        android:text="-" />
</RelativeLayout>